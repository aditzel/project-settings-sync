{
  "name": "pss",
  "version": "0.1.0",
  "description": "Sync project settings (.env files) across machines using Backblaze B2",
  "type": "module",
  "bin": {
    "pss": "./bin/run.ts"
  },
  "files": [
    "/bin",
    "/src"
  ],
  "oclif": {
    "bin": "pss",
    "dirname": "pss",
    "commands": "./src/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "scripts": {
    "dev": "bun run bin/dev.ts",
    "build": "bun build ./bin/run.ts --outdir ./dist --target node",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/node": "^25.0.6",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-help": "^6.2.36",
    "chalk": "^5.6.2",
    "glob": "^13.0.0",
    "libsodium-wrappers-sumo": "^0.8.0",
    "ora": "^9.0.0"
  }
}
